
h2 Themes
#mb-site-theme
    .d-4.t-6(ng-repeat="theme in themes").mb-theme
        h4 {{theme.title}} 
        //- img(src="http://placehold.it/300x200")
        img(src="/{{theme.preview}}" data-toggle='modal' data-target='#theme-{{$index}}').img-responsive.img-thumbnail
        .modal.fade(id="theme-{{$index}}" tabindex='-1', role='dialog', aria-labelledby='theme-{{$index}}Label', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') Ã—
                            span.sr-only Close
                        h4(id="theme-{{$index}}").modal-title {{theme.title}}
                    .modal-body
                        .mb-theme-controls.a-left
                            .form-group
                                label Author
                                input(type="text" value="{{theme.author}}" disabled).form-control
                            .form-group
                                label Email
                                input(type="text" value="{{theme.email}}" disabled).form-control
                            .form-group
                                label Website
                                input(type="text" value="{{theme.website}}" disabled).form-control
                            .form-group
                                label Description
                                textarea(disabled).form-control {{theme.description}}
                        p(ng-if="theme.active").mb-active-theme.bg-success Currently in use
                        p(ng-if="!theme.active").mb-active-theme.bg-warning Not being used
                    .modal-footer
                        button.btn.btn-danger(ng-click="deleteTheme(theme, $index)" data-dismiss='modal') Delete
                        button.btn.btn-warning(type='button' ng-click="updateTheme(theme)" data-dismiss='modal') Update
                        button.btn.btn-success(ng-disabled="theme.active" ng-click="activateTheme(theme, $index)" data-dismiss='modal') Use this theme
                        button.btn.btn-default(type='button' data-dismiss='modal') Close
                        
        .mb-theme-buttons.a-center
            p(ng-if="theme.active").mb-active-theme.bg-success Currently in use
            p(ng-if="!theme.active").mb-active-theme.bg-warning Not being used

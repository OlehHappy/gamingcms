#signUp.modal.fade(tabindex='-1', role='dialog', aria-labelledby='signUpLabel', aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal')
					span(aria-hidden='true') Ã—
					span.sr-only Close
				h4#signUpLabel.modal-title Sign Up
			.modal-body
				.form-group
					label Username
					input(type="text" ng-model="new.username" placeholder="username").form-control
				.form-group
					label Email
					input(type="text" ng-model="new.email" placeholder="email").form-control
				.form-group
					label Password
					input(type="password" ng-model="new.password" placeholder="password").form-control
				.form-group
					label Password Confirm
					input(type="password" ng-model="passwordConfirm" placeholder="confirm password").form-control
			.modal-footer
				button.btn.btn-default(type='button' data-dismiss='modal') Close
				button.btn.btn-success(type='button' data-dismiss='modal') Sign Up